" 自定义快捷键
" Indentation
nnoremap < <<
nnoremap > >>
nnoremap <C-k> :tabp<CR>
nnoremap <C-j> :tabn<CR>
inoremap jj <ESC>
map <C-c> <ESC>  
nnoremap <C-s> :w<CR>
nnoremap Y y$ "
nnoremap < <<
nnoremap > >>
nnoremap P \"+p
vmap P \"+p
vnoremap Y \"+y
noremap Q :q<CR>
noremap S :w<CR>
noremap <silent> M J
noremap <silent> K 5k
noremap <silent> L 5l
noremap <silent> H 5h
noremap <silent> J 5j
noremap <silent> N 0
inoremap <C-a> <ESC>A

set cursorline
set relativenumber
set tabstop=4
set softtabstop=4
set shiftwidth=4
set ts=4
set foldmethod=indent
set foldmethod=syntax



set surround
set commentary
set ReplaceWithRegister
set argtextobj
set exchange
set highlightedyank
set vim-paragraph-motion
set textobj-indent
set textobj-entire
set matchit


let mapleader="<Space>"
set keep-english-in-normal-and-restore-in-insert

set easymotion
map <Leader> <Plug>(easymotion-prefix)

set NERDTree
nnoremap tt :NERDTreeToggle<CR>

set multiple-cursors
nmap <C-n> <Plug>NextWholeOccurrence
xmap <C-n> <Plug>NextWholeOccurrence
nmap <C-x> <Plug>SkipOccurrence
xmap <C-x> <Plug>SkipOccurrence
xmap <C-p> <Plug>RemoveOccurrence
xmap <C-p> <Plug>RemoveOccurrence
xmap <S-C-p> <Plug>AllWholeOccurrence
xmap <S-C-p> <Plug>AllWholeOccurrence

