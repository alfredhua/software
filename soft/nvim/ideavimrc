" 自定义快捷键
" Indentation
nnoremap < <<
nnoremap > >>
nnoremap <C-k> :tabp<CR>
nnoremap <C-j> :tabn<CR>
inoremap jj <ESC>
inoremap <C-;> <ESC>
map <C-;> <ESC>
nnoremap <C-s> :w<CR>
nnoremap Y y$ "
nnoremap < <<
nnoremap > >>
nnoremap P \"+p
vmap P \"+p
vnoremap Y \"+y
noremap Q :q<CR>
noremap S :w<CR>
noremap <silent> M J
noremap <silent> K 5k
noremap <silent> L 5l
noremap <silent> H 5h
noremap <silent> J 5j
noremap <silent> N 0
inoremap <C-a> <ESC>A
nnoremap <Leader>sc :nohisearch<CR>
nnoremap <C-l> :action GotoLine<CR>


nnoremap <Leader>pm :action ShowPopupMenu<CR>
nnoremap <Leader>rf :action RenameFile<CR>
nnoremap sf :action GotoClass<CR>
nnoremap sc :action FindInPath<CR>
nnoremap <C-w> :action FocusEditor<CR>
nnoremap tb :action ActivateStructureToolWindow<CR>
nnoremap gb :action GotoImplementation<CR>

let mapleader =" "
nnoremap <SPACE> <Nop>

" 设置
set cursorline
set relativenumber
set tabstop=4
set softtabstop=6
set shiftwidth=4
set ts=4
set foldmethod=indent
set foldmethod=synta

" 插件
set multiple-cursors
nmap <C-n> <Plug>NextWholeOccurrence
xmap <C-n> <Plug>NextWholeOccurrence
nmap <C-x> <Plug>SkipOccurrence
xmap <C-x> <Plug>SkipOccurrence
xmap <C-p> <Plug>RemoveOccurrence
xmap <C-p> <Plug>RemoveOccurrence
xmap <S-C-p> <Plug>AllWholeOccurrence
xmap <S-C-p> <Plug>AllWholeOccurrence

set nerdtree  " t
nnoremap tt :NERDTreeToggle<CR>

set easymotion  " <Space>
map <Space> <Plug>(easymotion-prefix)

set commentary  " gc

set ReplaceWithRegister  " gr grr

set argtextobj  " 参数 (d,c,v)aa/ia

set exchange  " 更换，cx(iw,ap), cxx, X, cxc